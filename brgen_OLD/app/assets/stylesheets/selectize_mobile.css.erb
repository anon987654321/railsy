
.selectize-control {
  margin: 0 -8px;
}

.selectize-control .selectize-input:after {
  /* CSS4: background-position-x: -120px; */
  background-position: -120px 0;
  height: 20px;
  width: 9px;
  top: 12px;
  right: 17px;
  transform: rotate(-90deg);
  transition: all .3s ease;
}

.selectize-input.dropdown-active:after {
 transform: rotate(90deg);
}

.selectize-input {
  padding: 12px 7px;
}

.selectize-input input, .selectize-input .item, .selectize-dropdown .optgroup-header, .selectize-dropdown [data-selectable] {
  font-size: 18px;
}

.selectize-dropdown {
  margin: 0 -9px;
}

.selectize-dropdown .optgroup {
  padding: 0 5px;
}

.selectize-dropdown .optgroup-header {
  font-weight: normal;
  color: #888;
}

.selectize-dropdown .optgroup-header, .selectize-dropdown [data-selectable] {
  line-height: 27px;
}

