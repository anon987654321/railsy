
.selectize-control {
  margin-right: -8px;
  margin-left: -8px;
}

.selectize-input, .selectize-input input, .selectize-dropdown [data-selectable] {
  cursor: pointer;
}

.selectize-input.input-active, .selectize-input.input-active input {
  cursor: text;
}

.selectize-input {
  padding: 9px 6px 10px;
}

.selectize-input:after {
  height: 4px;
  width: 8px;
  top: 15px;
  right: 10px;
}

.selectize-dropdown {
  line-height: 19px;
}

.selectize-dropdown [data-selectable]:hover {
  background: #e9e9e9;
}

.selectize-dropdown .optgroup-header {
  color: #222;
}

.selectize-dropdown .optgroup-header, .selectize-dropdown [data-selectable] {
  padding-left: 6px;
}

